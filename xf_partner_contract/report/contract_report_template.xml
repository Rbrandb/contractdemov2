        <template id="contract_report_template">
            <t t-call="web.html_container">
                <t t-call="xf_partner_contract.custom_contract_layout">
                    <div class="page" style="background-image:url('/xf_partner_contract/static/description/back.jpg');
                        background-size:250mm 280mm; width:250mm; height:255mm; padding-top:20mm;">
                        <div class="text-center">
                            <h2>
                                <t t-esc="form.get('name')"/>
                            </h2>
                        </div>
                        <div class="text-right">
                            <t t-if="partner.get('name')">
                                <div>
                                    Partner :
                                    <t t-esc="partner['name']"/>
                                </div>
                            </t>
                            <t t-if="form['date_start']">
                                <div>
                                    Start Date:
                                    <t t-esc="form['date_start']"/>
                                </div>
                            </t>
                            <t t-if="form['date_end']">
                                <div>
                                    End Date:
                                    <t t-esc="form['date_end']"/>
                                </div>
                            </t>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <table class="table table-bordered" style="table-layout: fixed" id="hash_config_table">
                                    <thead style="display: table-row-group">
                                        <tr>
                                            <th class="text-center" style="width: 20%; border: 1px solid #6699CC;"
                                                scope="col">Sl NO
                                            </th>
                                            <th class="text-center" style="width: 20%; border: 1px solid #6699CC;"
                                                scope="col">Product
                                            </th>
                                            <th class="text-center" style="width: 20%; border: 1px solid #6699CC;"
                                                scope="col">Label
                                            </th>
                                            <th class="text-center" style="width: 20%; border: 1px solid #6699CC;"
                                                scope="col">Quantity
                                            </th>
                                            <th class="text-center" style="width: 20%; border: 1px solid #6699CC;"
                                                scope="col">Price
                                            </th>
                                            <th class="text-center" style="width: 20%; border: 1px solid #6699CC;"
                                                scope="col">Specification
                                            </th>
                                        </tr>
                                    </thead>
                                    <body>
                                        <t t-set="i" t-value="1"/>
                                        <t t-foreach="line" t-as="result">
                                            <tr>
                                                <td style="color: white; background:#6699CC;">
                                                    <t t-esc="i"/>
                                                </td>
                                                <t t-set="i" t-value="i + 1"/>
                                                <td style="color: white; background:#6699CC;">
                                                    <t t-esc="result['product_id']"/>
                                                </td>
                                                <td style="color: white; background:#6699CC;">
                                                    <t t-esc="result['label']"/>
                                                </td>
                                                <td style="color: white; background:#6699CC;">
                                                    <t t-esc="result['Quantity']"/>
                                                </td>
                                                <td style="color: white; background:#6699CC;">
                                                    <t t-esc="result['Price']"/>
                                                </td>
                                                <td style="color: white; background:#6699CC;">
                                                    <t t-esc="result['specification']"/>
                                                </td>
                                            </tr>
                                        </t>
                                    </body>
                                </table>
                                <div class="row" style="page-break-before:always;
                                        background-image:url('/xf_partner_contract/static/description/back.jpg');
                                        background-size:250mm 280mm; width:250mm; height:255mm; padding-top:20mm;">
                                    <div class="text-left" style="padding-left:30px;">
                                        <div style="font-weight: bold; font-size: 26px;">
                                            Documents to be provided by seller
                                        </div>
                                        <div style="font-size: 26px;">
                                            - Commercial invoice
                                        </div>
                                        <div style="font-size: 26px;">
                                            - Annex VII
                                        </div>
                                        <div style="font-size: 26px;">
                                            - Green list waste contract
                                        </div>
                                        <div style="font-size: 26px;">
                                            - Self-declaration; Feedstock is Used Cooking Oil (UCO) of Virgin Vegetable
                                            Oil (VVO) origin
                                        </div>
                                        <div style="font-size: 26px;">
                                            - ISCC EU Delivery note
                                        </div>
                                        <div style="font-size: 26px;">
                                            - Marine insurance certificate for 110% cargo value covering “All Risks”
                                        </div>
                                        <div style="font-size: 26px;">
                                            - B/L copy, marked freight prepaid inc ship. on board stamped, telex or
                                            seaway bill
                                        </div>
                                        <div style="font-size: 26px;">
                                            - Weight tickets of each container
                                        </div>
                                        <div style="font-size: 26px;">
                                            - Picture form each load iso or flexi-bag (tank number)
                                        </div>
                                        <div style="font-size: 26px;">
                                            - EUR1 certificate if available
                                        </div>
                                        <br/>
                                        <br/>
                                        <div style="font-size: 26px;">
                                            We kindly ask you to return a legally signed copy of this contract to us by
                                            e-mail.
                                            In case we don’t receive the legally signed copy of this contract within 2
                                            working
                                            days after contract date, we will take this contract as a final acceptance
                                            of the conditions mentioned.
                                        </div>
                                        <div class="row" style="padding-top:50px; font-size: 23px;">
                                            <div class="col-6">
                                                <div>
                                                    <t t-if="type =='sale'">
                                                        Seller:&amp;nbsp;
                                                        <t t-esc="res_company.name"/>
                                                    </t>
                                                    <t t-else="">
                                                        Buyer:&amp;nbsp;
                                                        <t t-esc="res_company.name"/>
                                                    </t>
                                                </div>
                                                <div>
                                                    Date :
                                                </div>
                                                <br/>
                                                <div>
                                                    Signature :
                                                </div>
                                            </div>
                                            <div class="col-6">
                                                <div>
                                                    <t t-if="type =='sale'">
                                                        Buyer:
                                                        <t t-esc="partner['name']"/>
                                                    </t>
                                                    <t t-else="">
                                                        Seller:&amp;nbsp;
                                                        <t t-esc="partner['name']"/>
                                                    </t>
                                                </div>
                                                <div>
                                                    Date :
                                                </div>
                                                <br/>
                                                <div>
                                                    Signature :
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
