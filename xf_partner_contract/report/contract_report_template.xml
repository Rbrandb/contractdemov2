<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <template id="contract_report_template">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="oe_structure">
                        <div class="text-center">
                            <h2>
                                <t t-esc="form.get('name')"/>
                            </h2>
                        </div>
                        <div class="text-right">
                            <t t-if="partner.get('name')">
                                <div>
                                    Partner : <t t-esc="partner['name']"/>
                                </div>
                            </t>
                            <t t-if="form['date_start']">
                                <div>
                                    Start Date: <t t-esc="form['date_start']"/>
                                </div>
                            </t>
                            <t t-if="form['date_end']">
                                <div>
                                    End Date: <t t-esc="form['date_end']"/>
                                </div>
                            </t>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <table class="table table-bordered" style="table-layout: fixed" id="hash_config_table">
                                <thead style="display: table-row-group">
                                    <tr>
                                        <th class="text-center" style="width: 20%" scope="col">Sl NO</th>
                                        <th class="text-center" style="width: 20%" scope="col">Product</th>
                                        <th class="text-center" style="width: 20%" scope="col">Label</th>
                                        <th class="text-center" style="width: 20%" scope="col">Quantity</th>
                                        <th class="text-center" style="width: 20%" scope="col">Price</th>
                                    </tr>
                                </thead>
                                <body>
                                    <t t-set="i" t-value="1"/>
                                    <t t-foreach="line" t-as="result">
                                        <tr>
                                            <td>
                                                <t t-esc="i"/>
                                            </td>
                                            <t t-set="i" t-value="i + 1"/>
                                            <td>
                                                <t t-esc="result['product_id']"/>
                                            </td>
                                            <td>
                                                <t t-esc="result['label']"/>
                                            </td>
                                            <td>
                                                <t t-esc="result['Quantity']"/>
                                            </td>
                                            <td>
                                                <t t-esc="result['Price']"/>
                                            </td>
                                        </tr>
                                    </t>
                                </body>
                            </table>
                        </div>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
